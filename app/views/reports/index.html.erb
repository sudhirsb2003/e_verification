   <th> Emp code</th>
   <th> C-A-Office Address </th>
   <th> Agency Name </th>
  </tr>
  </thead>
 <% @customers.each do |d| %>
  <tbody>
  <tr>
   <td style = "color:blue"><b><%= d.applicant_name %></b></td>
   <td><%= d.fh_code %></td>
   <td><%= d.address %></th>
   <% if d.status=='submitted' %>
   <td style="color:red"><b>Pending</b></i></td>
