   <td style="color:darkorange"><b>In Progress</b></i></td>
   <% end %>
   <% if d.co_applicant.co_applicant_business.status=='verified' %>
   <td style="color:darkgreen"><b>Done</b></i></td>
   <% end %>
   <td>AGLV15428796</td>
   <td>EMP-8309</td>
   <td><%= d.co_applicant.co_applicant_business.address %></td>
   <td><%= d.co_applicant.co_applicant_business.agency_name %></td>
<% end %>
  </tr>

  </tbody>
 <% end %>
</table>
</div>
<% end %>


