<script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>

<%= javascript_include_tag "bootstrap-datepicker.js" %></script>
<script type="text/javascript">
$(function() {
    $('.datepicker').datepicker();
});
</script>

<%= form_for :reports_path, :method => :get do |f| %>
<div class ="row">
  <div class="field_name">
  <%= label_tag :'Choose Start Date' %>
  <%= text_field_tag :start_date, '', :class=> "datepicker", :value=> Date.today-1 %>
</div>
  <div class="field_name">
  <%= label_tag :'Choose End Date' %>
  <%= text_field_tag :end_date, '', :class => "datepicker", :value=> Date.today %>
</div><br><Br><br><br>
<%= f.submit "Generate Report", :class =>"btn btn-info" %>
</div>
<% end %>
<hr>
<% if @customers.nil? %>
 <% else %>

<p>
  <strong>  
   <%= link_to "Download this Report", reports_path(:start_date => params[:start_date], :end_date => params[:end_date], format: "xls") %>
  </strong>
</p>

<div id="reports" style ="width:2800px;padding:0px;border-radius:5px;border:0px solid #000000;text-align:center">
<table border="1" cellpadding="5" cellspacing="5">
  <thead>
  <tr>
   <th colspan="5"> Customer_detail </th>
   <th colspan="4"> Business Detail </th>
   <th colspan="5"> Co applicant Detail</th>
   <th colspan="9"> Co applicant business</th>
  </tr>
<tr>
   <th> name </th>
   <th> br-code </th>
   <th> Address </th>
   <th> status </th>
   <th> Agency name </th>
   <th> Company_name </th>
   <th> Employee_code </th>
   <th> Office address </th>
   <th> Agency Name </th>
   <th> C-A-N </th>
   <th> C-A-br-code </th>
