<style>
 #status{padding-left:15px;border:3px solid transparent;border-radius:3px;background:silver;float:right}

  pending{
           padding:14px;
           border:2px solid transparent;
           border-radius :3px;
           background:blue;
           color:white;
            }
  in_progress{
           padding:14px;
           border:2px solid yellow;
           border-radius :3px;
           background:yellow;
           color:black;
            }

  complete{
           padding:14px;
           border:2px solid green;
           border-radius :5px;
           background:green;
           color:white;
            }
</style>
<div id="status">
<% if current_user.role=="super_user" %>
 <strong>Pending </strong> &nbsp;&nbsp; <pending><%= @total_pending %></pending> &nbsp;&nbsp;
 <strong>in progress </strong> &nbsp;&nbsp; <in_progress><%= @total_in_progress %></in_progress> &nbsp;&nbsp;
 <strong>Completed </strong> &nbsp;&nbsp; <complete><%= @total_completed %></complete>
<% end %>
<% if current_user.role=="tab_user" %>
 <strong>Total Task </strong> &nbsp;&nbsp; <pending><%= @all %></pending> &nbsp;&nbsp;
 <strong>Done </strong> &nbsp;&nbsp; <complete><%= @done %></complete>
 <strong>Left </strong> &nbsp;&nbsp; <complete><%= @busi_pending %></complete>
<% end %>
</div>

