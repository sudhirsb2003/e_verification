EVerification::Application.routes.draw do
  root :to => 'dashboards#index'
  get "dashboards/index"
  get "headshot_demo/index"

  post "headshot/capture" => 'headshot#capture', :as => :headshot_capture

  resources :work_serveys  
  resources :webcam_pictures
  resources :customers
  resources :tabs
  resources :profiles
  resources :customer_documents
  resources :co_applicants
  resources :co_applicant_work_details
  resources :serveys
  resources :customers do 
    member do
     post :customer_verification
     get :customer_verification
     post :customer_co_applicant_verification
     get :customer_co_aaplicant_verification
     post :accept
     get :accept
     post :re_indicated
     get :re_indicated
    end
  end

  ActiveAdmin.routes(self)

  devise_for :admin_users, ActiveAdmin::Devise.config

  devise_for :users, :controllers => { :registrations => "registrations" } do
    get '/users/sign_out' => 'devise/sessions#destroy'
  end 

end
